<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AssetEditor2"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="AssetEditor2.MainWindow"
        mc:Ignorable="d"
        Title="Asset Editor" Height="525.829" Width="783.768">
    <Grid>

        <DockPanel>
            <Menu DockPanel.Dock="Top" x:Name="MainMenu" Height="30">
                <MenuItem Header="_File">
                    <MenuItem Header ="_Exit" x:Name="Exit"/>
                </MenuItem>
                <MenuItem Header="Edit" DockPanel.Dock="Top">
                    <MenuItem x:Name="AddAsset" Header="Add asset"/>
                    <MenuItem x:Name="RemoveAsset" Header="Remove asset" />
                    <Separator/>
                    <MenuItem x:Name="CropAndAlign" Header="Crop and Alight anchors" />
                    <Separator/>
                    <MenuItem x:Name="RenderAll" Header="Render all Assets"/>
                </MenuItem>
                <MenuItem Header="Help">
                    <MenuItem Header="About"/>
                </MenuItem>
            </Menu>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MaxWidth="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ListBox x:Name="AssetsList" HorizontalAlignment="Stretch">
                    <ListBoxItem>test</ListBoxItem>
                </ListBox>
                <DockPanel Grid.Column="1">
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Height="30"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                        </Grid.ColumnDefinitions>
                        <DockPanel HorizontalAlignment="Left" Grid.Column="0" LastChildFill="False">
                            <StackPanel DockPanel.Dock="Left">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox Grid.Column="0"/>
                                    <Button Grid.Column="1">+</Button>
                                    <Button Grid.Column="2">-</Button>
                                </Grid>
                                <Label>Add column</Label>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0" >Left</Button>
                                    <Button Grid.Column="1" >Right</Button>
                                </Grid>
                                <Label>Remove column</Label>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0">Left</Button>
                                    <Button Grid.Column="1">Right</Button>
                                </Grid>
                                <Label>Add Row</Label>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0" >Top</Button>
                                    <Button Grid.Column="1" >Bottom</Button>
                                </Grid>
                                <Label>Remove Row</Label>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0" >Top</Button>
                                    <Button Grid.Column="1" >Bottom</Button>
                                </Grid>
                                <Label>Move</Label>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"></ColumnDefinition>
                                        <ColumnDefinition Width="1*"></ColumnDefinition>
                                        <ColumnDefinition Width="1*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Button Grid.Column="1">Up</Button>
                                    <Button Grid.Column="0" Grid.Row="1">Left</Button>
                                    <Button Grid.Column="2" Grid.Row="1">Right</Button>
                                    <Button Grid.Column="1" Grid.Row="2" >Down</Button>

                                </Grid>
                            </StackPanel>
                        </DockPanel>
                        <DockPanel HorizontalAlignment="Center" Grid.Column="1"/>
                        <Slider Orientation="Vertical" Grid.Column="2"></Slider>
                    </Grid>
                </DockPanel>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
